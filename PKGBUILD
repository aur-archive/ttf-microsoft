package_ttf-msfonts() {
    pkgdesc="Split build some Microsoft Windows 7 SP1 TrueType Fonts"
    install='ttf-msfonts.install'

    install -dm755 ${pkgdir}/usr/share/fonts/msfonts
    install -Dm 644 "license.rtf" "${pkgdir}/usr/share/licenses/${pkgbase}/license.rtf"
}
