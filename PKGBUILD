package_ttf-microsoft-arial() {
    pkgdesc="Fonts Arial: Regular Italic Bold Bold-Italic."
    depends+=('ttf-msfonts')
    install='ttf-font.install'

    cd "${srcdir}"
    for font in arialbd.ttf arialbi.ttf ariali.ttf arial.ttf
    do
        install -Dm644 $font ${pkgdir}/usr/share/fonts/msfonts/$font
    done
}

package_ttf-microsoft-arial-narrow() {
    pkgdesc="Fonts Arial Narrow: Regular Italic Bold Bold-Italic."
    depends+=('ttf-msfonts')
    install='ttf-font.install'

    cd "${srcdir}"
    for font in ARIALNBI.TTF ARIALNB.TTF ARIALNI.TTF ARIALN.TTF
    do
        install -Dm644 $font "${pkgdir}/usr/share/fonts/msfonts/$(echo $font|tr A-Z a-z)"
    done
}

package_ttf-microsoft-calibri() {
    pkgdesc="Fonts Calibri: Regular Italic Bold Bold-Italic Light Light-Italic."
    depends+=('ttf-msfonts')
    install='ttf-font.install'

    cd "${srcdir}"
    for font in calibrib.ttf calibrili.ttf calibri.ttf calibrii.ttf calibril.ttf calibriz.ttf
    do
        install -Dm644 $font ${pkgdir}/usr/share/fonts/msfonts/$font
    done
}

